<%- include('../includes/head.ejs') %>
</head>

<body>
    <%- include('../includes/nav.ejs') %>
    <section class="section">
        <div class="container">
            <div>
                <h2 class="title">Edit Addons</h2>
                <form class="product-form" action="/customburger/<%=audience.id%>" method="POST">
                    <input hidden value="<%=audience.id%>" name="id">
                    <input hidden value="<%=audience.name%>" name="name">
                    <input hidden value="<%=audience.createdAt%>" name="createdAt">
                    <div class="field">
                        <label class="label"><i class="mdi mdi-24px mdi-comment">
                            </i>Type of Burger (Chicken or Beef)</label>
                        <div class="control">
                            <textarea class="textarea is-info" type="text" name="q1"
                                placeholder="Enter your comment for Question #1"><%=audience.q1%></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label"><i class="mdi mdi-24px mdi-comment">
                            </i>Do you want to add additional patty?</label>
                        <div class="control">
                            <textarea class="textarea is-info" type="text" name="q2"
                                placeholder="Enter your comment for Question #2"><%=audience.q2%></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label"><i class="mdi mdi-24px mdi-comment">
                            </i>Type of Cheese (Mozzarella or Cheddar)</label>
                        <div class="control">
                            <textarea class="textarea is-info" type="text" name="q3"
                                placeholder="Enter your comment for Question #3"><%=audience.q3%></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label"><i class="mdi mdi-24px mdi-comment">
                            </i>Do you want to add Vegatable?</label>
                        <div class="control">
                            <textarea class="textarea is-info" type="text" name="q4"
                                placeholder="Enter your comment for Question #4"><%=audience.q4%></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <label class="label"><i class="mdi mdi-24px mdi-comment">
                            </i> Do you want to add sidedish?</label>
                        <div class="control">
                            <textarea class="textarea is-info" type="text" name="q5"
                                placeholder="Enter your comment for Question #5"><%=audience.q5%></textarea>
                        </div>
                    </div>
                    <div class="field is-grouped">
                        <div class="control">
                            <button class="button is-rounded" type="submit">Update Burger</button>
                        </div>
                        <div class="control">
                            <a class="button is-rounded" href="/customburger/showCustomburgere">
                                <i class="mdi mdi-24px mdi-arrow-left-bold">
                                </i>Go Back
                            </a>
                        </div>

                        <div class="control">
                            <a class="button is-rounded" href="/">
                                <i class="mdi mdi-24px mdi-home-circle">
                                </i>Go Back to Main Menu
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <%- include('../includes/footer.ejs') %>
    <%- include('../includes/scripts.ejs') %>
</body>

</html>